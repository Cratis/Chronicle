{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "${workspaceFolder}/.vscode/build-project.sh",
            "type": "process",
            "args": [
                "${input:project}"
            ],
            "problemMatcher": "$msCompile",
            "runOptions": {
                "reevaluateOnRerun": false
            }
        },
        {
            "label": "build-internal",
            "command": "${workspaceFolder}/.vscode/build-project.sh",
            "type": "process",
            "args": [
                "${input:remembered-project}",
            ],
            "problemMatcher": "$msCompile",
            "runOptions": {
                "reevaluateOnRerun": false
            }
        }
    ],
    "inputs": [
        {
            "id": "remembered-project",
            "type": "command",
            "command": "extension.commandvariable.remember",
            "args": {
                "key": "project",
                "value": "${input:project}"
            }
        },
        {
            "id": "project",
            "type": "command",
            "command": "extension.commandvariable.pickStringRemember",
            "args": {
                "description": "Pick project to build",
                "key": "project",
                "fileName": "${workspaceFolder}/.vscode/projects.txt",
                "fileFormat": "pattern",
                "pattern": {
                    "regexp": "^(.*)$"
                }
            }
        }
    ]
}

