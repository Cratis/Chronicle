{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-internal",
            "cwd": "${input:project}",
            "program": "${input:target}",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "launch-njmc",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${input:target}",
            "cwd": "${input:project}",
            "stopAtEntry": false,
            "justMyCode": false,
            "requireExactSource": false,
            "symbolOptions": {
                // "moduleFilter": {
                //     "mode": "loadOnlyIncluded",
                //     "includedModules": [
                //         "Cratis.*.dll"
                //     ]
                // },
                "searchPaths": [],
                "searchMicrosoftSymbolServer": false,
                "searchNuGetOrgSymbolServer": true
            },
            "suppressJITOptimizations": true,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {}
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "inputs": [
        {
            "id": "project",
            "type": "command",
            "command": "extension.commandvariable.pickStringRemember",
            "args": {
                "description": "Pick project to debug",
                "key": "project",
                "default": "",
                "options": [
                    "${workspaceFolder}/Source/Kernel/Server",
                    "${workspaceFolder}/Source/Clients/DotNET",
                    "${workspaceFolder}/Samples/Basic"
                ]
            }
        },
        {
            "id": "target",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "${workspaceFolder}/.vscode/get-target.sh ${input:project}",
                "cwd": "${input:project}",
                "useSingleResult": true
            }
        },
    ],
    "compounds": []
}
