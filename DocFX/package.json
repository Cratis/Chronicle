{
    "name": "site",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "watch": "rm -rf ./_site && dotnet clean && dotnet restore && concurrently 'yarn serve' 'npm-watch build'",
        "build": "dotnet msbuild -t:docfx",
        "serve": "mkdir ./_site && cd ./_site && yarn httpserver"
    },
    "watch": {
        "build": {
            "patterns": [
                "api",
                "app",
                "toc",
                "index"
            ],
            "extensions": "md,yml",
            "quiet": false
        }
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^7.3.0",
        "httpserver": "^0.3.0",
        "npm-watch": "^0.11.0"
    }
}
