<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <AssemblyName>Cratis.Chronicle.Integration.Api</AssemblyName>
        <RootNamespace>Cratis.Chronicle.Integration.Api</RootNamespace>
        <IsTestProject>true</IsTestProject>
        <LocalImageName>$(CRATIS_CHRONICLE_LOCAL_IMAGE)</LocalImageName>
        <LocalImageName Condition="'$(LocalImageName)' == ''">cratis/chronicle:local-development</LocalImageName>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="../../Source/Clients/Api/Api.csproj" />
        <ProjectReference Include="../../Source/Kernel/Server/Server.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Cratis.Applications" VersionOverride="17.2.2" />
      <PackageReference Include="Cratis.Applications.MongoDB" VersionOverride="17.2.2" />
    <PackageReference Include="Cratis.Applications.ProxyGenerator.Build" VersionOverride="17.7.1" />
      <PackageReference Include="Cratis.Applications.Swagger" VersionOverride="17.2.2" />
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" />
    </ItemGroup>

    <Target Name="BuildDocker" AfterTargets="Build">
        <Exec Command="rm -rf $(MSBuildThisFileDirectory)../../Source/Kernel/Server/out" />
        <Exec Command="mkdir $(MSBuildThisFileDirectory)../../Source/Kernel/Server/out" />
        <Exec Command="cp -R -f $(MSBuildThisFileDirectory)../../Source/Kernel/Server/bin/$(Configuration)/net9.0/. $(MSBuildThisFileDirectory)../../Source/Kernel/Server/out/ 2>/dev/null" />
        <Exec Command="docker build -t $(LocalImageName) -f Docker/Local/Dockerfile ." WorkingDirectory="$(MSBuildThisFileDirectory)../../"/>
    </Target>

</Project>
