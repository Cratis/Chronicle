<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <AssemblyName>Cratis.Chronicle.Integration.Api</AssemblyName>
        <RootNamespace>Cratis.Chronicle.Integration.Api</RootNamespace>
        <IsTestProject>true</IsTestProject>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="../../Source/Clients/Api/Api.csproj" />
        <ProjectReference Include="../../Source/Kernel/Server/Server.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" />
    </ItemGroup>

    <Target Name="BuildDocker" AfterTargets="Build" Condition="'$(DisableLocalDockerBuild)' != 'true'">
        <Exec Command="rm -rf $(MSBuildThisFileDirectory)../../Source/Kernel/Server/out" />
        <Exec Command="mkdir $(MSBuildThisFileDirectory)../../Source/Kernel/Server/out" />
        <Exec Command="cp -R -f $(MSBuildThisFileDirectory)../../Source/Kernel/Server/bin/$(Configuration)/net9.0/ $(MSBuildThisFileDirectory)../../Source/Kernel/Server/out/ 2>/dev/null" />
        <Exec Command="docker build -t cratis/chronicle:local-development -f Docker/Local/Dockerfile ." WorkingDirectory="$(MSBuildThisFileDirectory)../../"/>
    </Target>

</Project>
