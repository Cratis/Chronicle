<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Cratis.Chronicle.InProcess</AssemblyName>
        <RootNamespace>Cratis.Chronicle.InProcess</RootNamespace>
        <NoWarn>$(NoWarn);ORLEANS0010</NoWarn>
        <IncludeBuildOutput>true</IncludeBuildOutput>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Cratis.Chronicle.InProcess.Integration" />
        <InternalsVisibleTo Include="Cratis.Chronicle.XUnit.Integration" />
        <InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../DotNET/DotNET.csproj" />
        <ProjectReference Include="../Connections/Connections.csproj" />
        <ProjectReference Include="../AspNetCore/AspNetCore.csproj" />
        <ProjectReference Include="../../Infrastructure/Infrastructure.csproj" />

        <!-- Kernel assemblies as runtime-only -->
        <ProjectReference Include="../../Kernel/Storage/Storage.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="../../Kernel/Storage.MongoDB/Storage.MongoDB.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="../../Kernel/Core/Core.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="../../Kernel/Concepts/Concepts.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Cratis.Arc.MongoDB" />
        <PackageReference Include="Microsoft.Orleans.Server" />
        <PackageReference Include="Microsoft.Orleans.Streaming" />
        <PackageReference Include="Microsoft.Orleans.Reminders" />
        <PackageReference Include="Microsoft.Orleans.Sdk" />
        <PackageReference Include="Microsoft.Orleans.BroadcastChannel" />
        <PackageReference Include="Microsoft.Orleans.Serialization.SystemTextJson" />
        <PackageReference Include="Microsoft.Extensions.Resilience" />
        <PackageReference Include="Microsoft.Extensions.Http.Resilience" />
        <PackageReference Include="Microsoft.Extensions.Telemetry.Abstractions" />
        <PackageReference Include="Orleans.Providers.MongoDB" />
        <PackageReference Include="OneOf" />
        <PackageReference Include="protobuf-net.Grpc" />
        <PackageReference Include="NJsonSchema" />
        <PackageReference Include="Polly.Core" />
    </ItemGroup>

    <!--
        Use ref/lib/runtimes split to hide private assemblies from intellisense:
        - ref/{tfm}/ contains only the main assembly (compile-time/intellisense)
        - lib/{tfm}/ contains the main runtime assembly
        - runtimes/any/lib/{tfm}/ contains private runtime-only assemblies (hidden from compile)
    -->
    <ItemGroup>
        <!-- Compile-time reference: only the main assembly is visible to consumers -->
        <None Include="$(OutputPath)Cratis.Chronicle.InProcess.dll" Pack="true" PackagePath="ref/$(TargetFramework)/" Visible="false" />

        <!-- Main runtime assembly -->
        <None Include="$(OutputPath)Cratis.Chronicle.InProcess.dll" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" />
        <None Include="$(OutputPath)Cratis.Chronicle.InProcess.pdb" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" Condition="Exists('$(OutputPath)Cratis.Chronicle.InProcess.pdb')" />

        <!-- Private runtime-only assemblies (deployed but hidden from IntelliSense) -->
        <None Include="$(OutputPath)Cratis.Chronicle.Storage.dll" Pack="true" PackagePath="runtimes/any/runtimes/any/lib/$(TargetFramework)/" Visible="false" />
        <None Include="$(OutputPath)Cratis.Chronicle.Storage.pdb" Pack="true" PackagePath="runtimes/any/lib/$(TargetFramework)/" Visible="false" Condition="Exists('$(OutputPath)Cratis.Chronicle.Storage.pdb')" />
        <None Include="$(OutputPath)Cratis.Chronicle.Storage.MongoDB.dll" Pack="true" PackagePath="runtimes/any/lib/$(TargetFramework)/" Visible="false" />
        <None Include="$(OutputPath)Cratis.Chronicle.Storage.MongoDB.pdb" Pack="true" PackagePath="runtimes/any/lib/$(TargetFramework)/" Visible="false" Condition="Exists('$(OutputPath)Cratis.Chronicle.Storage.MongoDB.pdb')" />
        <None Include="$(OutputPath)Cratis.Chronicle.Core.dll" Pack="true" PackagePath="runtimes/any/lib/$(TargetFramework)/" Visible="false" />
        <None Include="$(OutputPath)Cratis.Chronicle.Core.pdb" Pack="true" PackagePath="runtimes/any/lib/$(TargetFramework)/" Visible="false" Condition="Exists('$(OutputPath)Cratis.Chronicle.Core.pdb')" />
        <None Include="$(OutputPath)Cratis.Chronicle.Concepts.dll" Pack="true" PackagePath="runtimes/any/lib/$(TargetFramework)/" Visible="false" />
        <None Include="$(OutputPath)Cratis.Chronicle.Concepts.pdb" Pack="true" PackagePath="runtimes/any/lib/$(TargetFramework)/" Visible="false" Condition="Exists('$(OutputPath)Cratis.Chronicle.Concepts.pdb')" />
    </ItemGroup>
</Project>
