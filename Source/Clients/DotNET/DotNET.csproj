<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Cratis.Chronicle</AssemblyName>
        <RootNamespace>Cratis.Chronicle</RootNamespace>
        <!-- <ILRepackTargetsFile>$(MSBuildThisFileDirectory)../ILRepack.targets</ILRepackTargetsFile> -->
        <ILRepack>dotnet ilrepack</ILRepack>
        <LibPaths>@(ReferencePathWithRefAssemblies->'/lib:%(RelativeDir)',' ')</LibPaths>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="../Connections/Connections.csproj"/>
        <ProjectReference Include="../../Kernel/Contracts/Contracts.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="../../Infrastructure/Infrastructure.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <InputAssemblies Include="$(OutputPath)Cratis.Chronicle.dll" />
        <InputAssemblies Include="$(OutputPath)Cratis.Chronicle.Infrastructure.dll" />
        <InputAssemblies Include="$(OutputPath)Cratis.Chronicle.Contracts.dll" />
    </ItemGroup>

    <Target Name="MergeAssemblies" AfterTargets="Build">
        <Exec Command="$(ILRepack) $(LibPaths) /out:$(TargetPath) /internalize @(InputAssemblies->'%(FullPath)', ' ')" />
    </Target>

    <ItemGroup>
        <!-- <PackageReference Include="ILRepack.Lib.MSBuild.Task">
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
          <PrivateAssets>all</PrivateAssets>
        </PackageReference> -->
        <PackageReference Include="Microsoft.Extensions.Hosting" />
        <PackageReference Include="automapper" />
        <PackageReference Include="FluentValidation" />
        <PackageReference Include="protobuf-net.Grpc" />
        <PackageReference Include="Grpc.Net.Client" />
        <PackageReference Include="System.Reactive" />
        <PackageReference Include="NJsonSchema" />
    </ItemGroup>
</Project>
