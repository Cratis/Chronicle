<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Cratis.Chronicle</AssemblyName>
        <RootNamespace>Cratis.Chronicle</RootNamespace>
        <ILRepackTargetsFile>$(MSBuildThisFileDirectory)../ILRepack.targets</ILRepackTargetsFile>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Cratis.Chronicle.Specs" />
        <InternalsVisibleTo Include="Cratis.Chronicle.Orleans" />
        <InternalsVisibleTo Include="Cratis.Chronicle.XUnit" />
        <InternalsVisibleTo Include="Cratis.Chronicle.Orleans.XUnit" />
        <InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../Connections/Connections.csproj"/>
        <ProjectReference Include="../../Kernel/Contracts/Contracts.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="../../Infrastructure/Infrastructure.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="../../Tools/InternalsVerifier/InternalsVerifier.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <InputAssemblies Include="$(OutputPath)/Cratis.Chronicle.Connections.dll" />
    </ItemGroup>

    <ItemGroup>
        <InternalAssemblies Include="$(OutputPath)/Cratis.Chronicle.Contracts.dll" />
        <InternalAssemblies Include="$(OutputPath)/Cratis.Chronicle.Infrastructure.dll" />
    </ItemGroup>

    <PropertyGroup>
        <InternalNamespaces>@(InternalAssemblies->'%(Filename)', ';')</InternalNamespaces>
    </PropertyGroup>

    <Target Name="VerifyInternals" AfterTargets="ILRepack">
        <Message Text="dotnet run $(TargetPath) &quot;$(InternalNamespaces)&quot;" Importance="high" />
        <Exec Command="dotnet run $(TargetPath) &quot;$(InternalNamespaces)&quot;" WorkingDirectory="$(MSBuildThisFileDirectory)../../Tools/InternalsVerifier" />
    </Target>

    <ItemGroup>
        <PackageReference Include="ILRepack.Lib.MSBuild.Task">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.Extensions.Hosting" />
        <PackageReference Include="automapper" />
        <PackageReference Include="FluentValidation" />
        <PackageReference Include="protobuf-net.Grpc" />
        <PackageReference Include="Grpc.Net.Client" />
        <PackageReference Include="System.Reactive" />
        <PackageReference Include="NJsonSchema" />
    </ItemGroup>
</Project>
