<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Cratis.Chronicle</AssemblyName>
        <RootNamespace>Cratis.Chronicle</RootNamespace>
        <ContractsImplementationAssembly>Cratis.Chronicle.Contracts.Implementations</ContractsImplementationAssembly>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Cratis.Chronicle.AspNetCore" />
        <InternalsVisibleTo Include="Cratis.Chronicle.Api" />
        <InternalsVisibleTo Include="Cratis.Chronicle.Specs" />
        <InternalsVisibleTo Include="Cratis.Chronicle.Orleans" />
        <InternalsVisibleTo Include="Cratis.Chronicle.InProcess" />
        <InternalsVisibleTo Include="Cratis.Chronicle.Testing" />
        <InternalsVisibleTo Include="Cratis.Chronicle.XUnit.Integration" />
        <InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
        <InternalsVisibleTo Include="ProtoBuf.Grpc.Internal.Proxies" />
        <InternalsVisibleTo Include="System.Reflection.Emit" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../Connections/Connections.csproj"/>
        <ProjectReference Include="../../Kernel/Contracts/Contracts.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="../../Infrastructure/Infrastructure.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
    </ItemGroup>

    <Target Name="GrpcClients" BeforeTargets="Build" Condition=" '$(TargetFramework)' != '' ">
        <Message Text="Generating gRPC clients" Importance="high" />
        <Exec Command="dotnet run &quot;$(MSBuildThisFileDirectory)$(OutputPath)Cratis.Chronicle.Contracts.dll&quot; $(ContractsImplementationAssembly)" WorkingDirectory="$(MSBuildThisFileDirectory)../../Tools/GrpcClients" />
    </Target>

    <ItemGroup>
        <ProjectReference Include="../DotNET.CodeAnalysis/DotNET.CodeAnalysis.csproj" ReferenceOutputAssembly="false" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" />
        <PackageReference Include="protobuf-net.Grpc" />
        <PackageReference Include="Grpc.Net.Client" />
        <PackageReference Include="System.Reactive" />
        <PackageReference Include="NJsonSchema" />
    </ItemGroup>

    <ItemGroup>
        <PrivatePackageAssembly Include="$(ContractsImplementationAssembly)" />
    </ItemGroup>

    <!--
        Packaging fix: Cratis.Chronicle.Infrastructure.dll ships in lib/ because of the PrivateAssets=all
        ProjectReference above, but the SDK only emits Cratis.Chronicle.dll in ref/. Consumers that compile
        against the ref assembly fail with CS0012 when the compiler encounters types from Infrastructure
        (e.g. PropertyPath used on IReadModelPropertiesBuilder.Set). Including the dll in ref/ as well fixes
        this without changing the runtime behaviour.
    -->
    <Target Name="IncludeInfrastructureInRefFolder" BeforeTargets="_GetTfmSpecificContentForPackage">
        <ItemGroup>
            <TfmSpecificPackageFile Include="$(TargetDir)Cratis.Chronicle.Infrastructure.dll"
                                    PackagePath="ref/$(TargetFramework)/" />
        </ItemGroup>
    </Target>
</Project>
