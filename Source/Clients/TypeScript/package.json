{
    "name": "@cratis/chronicle.contracts",
    "version": "0.0.0",
    "description": "TypeScript gRPC contracts for Chronicle",
    "author": "Cratis",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cratis/chronicle.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "**/*.ts",
        "!**/*.spec.ts"
    ],
    "type": "module",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/esm/index.d.ts",
            "require": "./dist/cjs/index.js",
            "import": "./dist/esm/index.js"
        }
    },
    "scripts": {
        "clean": "rm -rf dist generated",
        "generate": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=generated --ts_proto_opt=esModuleInterop=true,env=node,outputServices=grpc-js,useExactTypes=false -I ../../Kernel/Protobuf ../../Kernel/Protobuf/*.proto ../../Kernel/Protobuf/protobuf-net/*.proto",
        "build": "yarn generate && tsc -b && rollup -c ./rollup.config.mjs",
        "prepare": "yarn clean && yarn build"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.12.4"
    },
    "devDependencies": {
        "@types/node": "^22.10.5",
        "protoc-gen-ts_proto": "^2.2.5",
        "rollup": "^4.30.1",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-typescript2": "^0.36.0",
        "ts-proto": "^2.2.5",
        "typescript": "^5.7.2"
    }
}
