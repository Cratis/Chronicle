<?xml version="1.0" encoding="utf-8" ?>
<!-- https://github.com/ravibpatel/ILRepack.Lib.MSBuild.Task -->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="PerformRepackaging" AfterTargets="Build" Condition="'$(Repack)' == 'true'">
    <ItemGroup>
        <InputAssemblies Include="$(TargetPath)"/>
        <InputAssemblies Include="@(AssemblyToMerge)"/>
        <InputAssemblies Include="@(InternalAssembly)"/>
        <FilteredReferences Include="@(ProjectReference->WithMetadataValue('PrivateAssets', 'all'))"
                         KeepMetadata="PrivateAssets;TargetPath" />
        <InternalAssemblies Include="@(FilteredReferences->'$(OutputPath)Cratis.Chronicle.%(Filename).dll')"/>
        <InputAssemblies Include="@(InternalAssemblies)" Exclude="@(AssemblyToExcludeFromMerge)"/>
        <LibraryPath Include="%(ReferencePathWithRefAssemblies.RelativeDir)" />
        <DoNotInternalizeAssemblies Include="@(AssemblyToMerge)"/>
    </ItemGroup>

    <PropertyGroup>
        <InternalNamespaces>@(InternalAssemblies->'%(Filename)', ';')</InternalNamespaces>
        <InternalAssemblyNames>@(InternalAssemblies->'%(Filename)', ';')</InternalAssemblyNames>
    </PropertyGroup>

    <ILRepack
        AllowDuplicateResources="false"
        DebugInfo="true"
        Internalize="true"
        CopyAttributes="false"
        ExcludeInternalizeSerializable="false"
        InputAssemblies="@(InputAssemblies)"
        InternalizeAssembly="@(InternalizeAssemblies)"
        OutputFile="$(TargetPath)"
        Parallel="true"
        LibraryPath="@(LibraryPath)"
        Verbose="false"
        XmlDocumentation="true"
        Union="true"
        LogFile="$(OutputPath)/ILRepack.log"
        TargetKind="SameAsPrimaryAssembly"/>

    <Exec Command="dotnet run $(TargetPath) &quot;$(InternalNamespaces)&quot;" WorkingDirectory="$(MSBuildThisFileDirectory)../Tools/InternalsVerifier" />
    <Exec Command="dotnet run $(TargetPath) &quot;$(InternalAssemblyNames)&quot;" WorkingDirectory="$(MSBuildThisFileDirectory)../Tools/AssemblyFixer" />
  </Target>
</Project>
