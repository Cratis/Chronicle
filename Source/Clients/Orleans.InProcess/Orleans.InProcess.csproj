<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Cratis.Chronicle.Orleans.InProcess</AssemblyName>
        <RootNamespace>Cratis.Chronicle.Orleans.InProcess</RootNamespace>
        <NoWarn>$(NoWarn);ORLEANS0010</NoWarn>
        <ILRepackTargetsFile>$(MSBuildThisFileDirectory)../ILRepack.targets</ILRepackTargetsFile>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="../DotNET/DotNET.csproj">
            <!-- <PrivateAssets>none</PrivateAssets> -->
        </ProjectReference>

        <ProjectReference Include="../AspNetCore/AspNetCore.csproj">
            <!-- <PrivateAssets>none</PrivateAssets> -->
        </ProjectReference>

        <ProjectReference Include="../Orleans/Orleans.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>

        <ProjectReference Include="../../Kernel/Compliance/Compliance.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>

        <ProjectReference Include="../../Kernel/Grains/Grains.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>

        <ProjectReference Include="../../Kernel/Grains.Interfaces/Grains.Interfaces.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>

        <ProjectReference Include="../../Kernel/Setup/Setup.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>

        <ProjectReference Include="../../Kernel/Diagnostics/Diagnostics.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>

        <ProjectReference Include="../../Kernel/Services/Services.csproj">
            <PrivateAssets>all</PrivateAssets>
            <Aliases>Server</Aliases>
        </ProjectReference>

        <ProjectReference Include="../../Kernel/Storage/Storage.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>

        <ProjectReference Include="../../Kernel/Storage.MongoDB/Storage.MongoDB.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>

        <ProjectReference Include="../../Kernel/Concepts/Concepts.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <FilteredReferences Include="@(ProjectReference->WithMetadataValue('PrivateAssets', 'all'))"
                         KeepMetadata="PrivateAssets;TargetPath" />
        <InternalAssemblies Include="@(FilteredReferences->'$(OutputPath)Cratis.Chronicle.%(Filename).dll')"/>
    </ItemGroup>

    <PropertyGroup>
        <InternalNamespaces>@(InternalAssemblies->'%(Filename)', ';')</InternalNamespaces>
    </PropertyGroup>

    <Target Name="Blah" AfterTargets="Build">
        <Message Text="Internal assembly: @(InternalAssemblies)" Importance="high" />
        <Message Text="Filtered Project references: @(FilteredReferences->'%(Filename)')" Importance="high" />
    </Target>

    <ItemGroup>
        <PackageReference Include="ILRepack.Lib.MSBuild.Task">
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.Orleans.Server" />
        <PackageReference Include="Microsoft.Orleans.Reminders" />
        <PackageReference Include="Microsoft.Orleans.Sdk" />
        <PackageReference Include="Microsoft.Orleans.BroadcastChannel" />
        <PackageReference Include="protobuf-net.Grpc" />
        <PackageReference Include="Cratis.Applications.Orleans" />
        <PackageReference Include="NJsonSchema" />
    </ItemGroup>
</Project>
