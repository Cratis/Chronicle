<Project>
    <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />
    <PropertyGroup>
        <AssemblyName>Cratis.Chronicle.Specs</AssemblyName>
        <RootNamespace>Cratis.Chronicle</RootNamespace>
        <IsTestProject>true</IsTestProject>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <Target Name="BuildDependencies">
        <MSBuild Projects="../DotNET/DotNET.csproj" Targets="Build" Properties="Configuration=$(Configuration);TargetFramework=$(TargetFramework);Repack=$(Repack)" />
    </Target>

    <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />

    <PropertyGroup Condition="'$(Repack)' == 'true'">
        <BuildDependsOn>BuildDependencies;$(BuildDependsOn)</BuildDependsOn>
    </PropertyGroup>

    <ItemGroup Condition="'$(Repack)' == 'true'">
        <Reference Include="../DotNET/bin/$(Configuration)/$(TargetFramework)/Cratis.Chronicle.dll"/>
    </ItemGroup>

    <ItemGroup Condition="'$(Repack)' != 'true'">
        <ProjectReference Include="../DotNET/DotNET.csproj" />
        <ProjectReference Include="../Connections/Connections.csproj" />
        <ProjectReference Include="../../Kernel/Contracts/Contracts.csproj" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../../Infrastructure/Infrastructure.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Cratis.Applications" />
        <PackageReference Include="FluentValidation" />
        <PackageReference Include="NJsonSchema" />
        <PackageReference Include="protobuf-net.Grpc" />
    </ItemGroup>
</Project>
