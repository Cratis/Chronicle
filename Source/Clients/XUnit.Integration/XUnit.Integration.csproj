<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Cratis.Chronicle.XUnit.Integration</AssemblyName>
        <RootNamespace>Cratis.Chronicle.XUnit.Integration</RootNamespace>
        <IsTestProject>false</IsTestProject>
        <IncludeBuildOutput>true</IncludeBuildOutput>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Cratis.Chronicle.InProcess.Integration" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../DotNET/DotNET.csproj" />
        <ProjectReference Include="../DotNET.InProcess/DotNET.InProcess.csproj" />
        <ProjectReference Include="../AspNetCore/AspNetCore.csproj" />

        <!-- Kernel assemblies as runtime-only with aliases -->
        <ProjectReference Include="../../Kernel/Concepts/Concepts.csproj">
            <Aliases>KernelConcepts</Aliases>
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="../../Kernel/Core/Core.csproj">
            <Aliases>KernelCore</Aliases>
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="../../Kernel/Storage.MongoDB/Storage.MongoDB.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="xunit">
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="mongodb.driver" />
        <PackageReference Include="Testcontainers" />
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" />
        <PackageReference Include="Cratis.Specifications.XUnit" />
        <PackageReference Include="Microsoft.Orleans.TestingHost" />
        <PackageReference Include="Cratis.Arc.MongoDB" />
    </ItemGroup>

    <!--
        Use ref/lib split to hide private assemblies from intellisense:
        - ref/{tfm}/ contains only the main assembly (compile-time/intellisense)
        - lib/{tfm}/ contains all assemblies (runtime)
    -->
    <ItemGroup>
        <!-- Compile-time reference: only the main assembly is visible to consumers -->
        <None Include="$(OutputPath)Cratis.Chronicle.XUnit.Integration.dll" Pack="true" PackagePath="ref/$(TargetFramework)/" Visible="false" />

        <!-- Runtime-only: bundled private assemblies, hidden from intellisense -->
        <None Include="$(OutputPath)Cratis.Chronicle.Concepts.dll" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" />
        <None Include="$(OutputPath)Cratis.Chronicle.Concepts.pdb" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" Condition="Exists('$(OutputPath)Cratis.Chronicle.Concepts.pdb')" />
        <None Include="$(OutputPath)Cratis.Chronicle.Core.dll" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" />
        <None Include="$(OutputPath)Cratis.Chronicle.Core.pdb" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" Condition="Exists('$(OutputPath)Cratis.Chronicle.Core.pdb')" />
        <None Include="$(OutputPath)Cratis.Chronicle.Storage.MongoDB.dll" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" />
        <None Include="$(OutputPath)Cratis.Chronicle.Storage.MongoDB.pdb" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" Condition="Exists('$(OutputPath)Cratis.Chronicle.Storage.MongoDB.pdb')" />
    </ItemGroup>
</Project>
