<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Import parent Directory.Build.props, but override problematic settings -->
  <Import Project="$([MSBuild]::GetPathOfFileAbove('Directory.Build.props', '$(MSBuildThisFileDirectory)../'))" />
  
  <PropertyGroup>
    <!-- Override to not use the parent target frameworks -->
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>
  
  <!-- Clear the default package references that don't support netstandard2.0 -->
  <ItemGroup>
    <PackageReference Remove="Cratis.Fundamentals" />
    <PackageReference Remove="System.Text.Json" />
  </ItemGroup>
</Project>
