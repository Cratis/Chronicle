<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Cratis.Chronicle.Connections</AssemblyName>
        <RootNamespace>Cratis.Chronicle.Connections</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Cratis.Chronicle" />
        <InternalsVisibleTo Include="Cratis.Chronicle.AspNetCore" />
        <InternalsVisibleTo Include="Cratis.Chronicle.Specs" />
        <InternalsVisibleTo Include="Cratis.Chronicle.InProcess" />
        <InternalsVisibleTo Include="Cratis.Chronicle.InProcess.Integration" />
        <InternalsVisibleTo Include="Cratis.Chronicle.Api" />
        <InternalsVisibleTo Include="Cratis.Chronicle.Setup" />
        <InternalsVisibleTo Include="Cratis.Chronicle.Testing" />
        <InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../../Kernel/Contracts/Contracts.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="protobuf-net.Grpc" />
        <PackageReference Include="Grpc.Net.Client" />
        <PackageReference Include="System.Reactive" />
        <PackageReference Include="Microsoft.Extensions.Hosting" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    </ItemGroup>

    <!--
        Use ref/lib split to hide private assemblies from intellisense:
        - ref/{tfm}/ contains only the main assembly → compile-time/intellisense
        - lib/{tfm}/ contains ALL assemblies → deployed at runtime
        IncludeBuildOutput=true auto-places main DLL + PDB in lib/, which is correct.
        ref/ overrides compile-time resolution so only main assembly is visible to IntelliSense.
    -->
    <ItemGroup>
        <!-- Compile-time reference: only the main assembly is visible to consumers for IntelliSense -->
        <None Include="$(OutputPath)Cratis.Chronicle.Connections.dll" Pack="true" PackagePath="ref/$(TargetFramework)/" Visible="false" />

        <!-- Private assemblies: deployed at runtime but hidden from IntelliSense via ref/ -->
        <None Include="$(OutputPath)Cratis.Chronicle.Contracts.dll" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" />
        <None Include="$(OutputPath)Cratis.Chronicle.Contracts.pdb" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" Condition="Exists('$(OutputPath)Cratis.Chronicle.Contracts.pdb')" />
        <None Include="$(OutputPath)$(ContractsImplementationAssembly).dll" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" />
        <None Include="$(OutputPath)$(ContractsImplementationAssembly).pdb" Pack="true" PackagePath="lib/$(TargetFramework)/" Visible="false" Condition="Exists('$(OutputPath)$(ContractsImplementationAssembly).pdb')" />
    </ItemGroup>
</Project>
