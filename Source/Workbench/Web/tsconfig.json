{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "ES2021.WeakRef",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "Api/*": [
                "Api/*"
            ],
            "Shared/*": [
                "Shared/*"
            ],
            "Shared": [
                "Shared/index"
            ],
            "State/*": [
                "State/*"
            ],
            "Components/*": [
                "Components/*"
            ],
            "Components": [
                "Components/index"
            ],
            "Layout/*": [
                "Layout/*"
            ],
            "Features/*": [
                "Features/*"
            ],
            "Strings": [
                "Strings"
            ],
            "given": [
                "given"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "**/for_*/**",
        "vite.config.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
