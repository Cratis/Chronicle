        <ProjectReference Include="../../Fundamentals/Fundamentals.csproj" />
        <ProjectReference Include="../../Extensions/MongoDB/MongoDB.csproj" />
        <ProjectReference Include="../../Extensions/Autofac/Autofac.csproj" />
    </ItemGroup>
